    function filterShoppingCartList(){
        if($('from_date').value || $('to_date').value){
            var url = '<?php echo $this->getUrl('promotionalgift/index/search') ?>';
            if($('from_date').value){
                var fromdate = $('from_date').value;
                url = url + 'fromdate/' + fromdate + '/';
