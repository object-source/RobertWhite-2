<script>
    //Rule
    spendPointItems = new Array();
    function getSpendBox(id){
        content = 'webpos-spend-points'+id;
        spendPointItems[id].getSpendBox(content);
        $('overlay_modal').observe('click', function(event){
            spendPointItems[id].spendPopup.hide(); 
